<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Grade Application-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#debugj2se) -->
    <target depends="build" description="Runs the executable jar" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="Grade Application" transport="dt_socket"/>
        <java fork="true" jar="dist/GradeApp.jar">
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
